<% provide(:title, 'Setting') %>

<div class="devise-container">
  <div class="devise-frame">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h2 class="devise-title">Edit</h2>

      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %>文字以上</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i style="color: red;">[必須]</i><br />
        <%= f.password_field :current_password, class: "form", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-edit" %>
      </div>
    <% end %>

    <%= button_to "Delete", registration_path(resource_name), method: :delete, data: { confirm: "削除しますか?" }, class: "btn btn-destroy" %>
  </div>
</div>
